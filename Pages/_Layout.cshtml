<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <!--<link rel="stylesheet" href="~/css/site.css" />-->
        <link rel="stylesheet" href="~/css/TulosTaulu.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <!--<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />-->
    </environment>
    <link rel="stylesheet" href="~/css/TulosTaulu.css" />
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
</head>
<body>
    <nav class="navbar fixed-top">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-menu-hamburger" style="font-size: 4em;"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <button class="btn btn-lg btn-primary" id="startGame" data-toggle="modal" data-target="#startModal" title="Arvotaan aloittaja. Koko peli resetoituu.">Aloita Peli</button>
                        </li>
                        <li>
                            <button class="btn btn-lg btn-warning" id="superPeriod" data-toggle="modal" data-target="#superModal" title="Arvotaan uusi aloittaja.">Supervuoro</button>
                        </li>
                        <li>
                            <button class="btn btn-lg btn-danger" id="undoChanges" data-toggle="tooltip" title="Nykyinen tilanne menetetään. Lopullinen peruutus">Peruuta Vuoronvaihto</button>
                        </li>
                        <li>
                            <button class="btn btn-lg btn-danger" id="editControl" data-toggle="tooltip" title="Näytä ylimääräiset plus ja minus napit">Korjaa Arvoja</button>
                        </li>
                    </ul>
                </li>
            </ul>
    </nav>

    <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2017 - Tulostaulu</p>
            </footer>
</div>


    @RenderSection("Scripts", required: false)
</body>
</html>
